# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
  colorflag="--color"
else # OS X `ls`
  colorflag="-G"
fi

alias grep='grep --color=always'
alias less='less -R'
alias ls='ls -a'
alias ll='ls -l'

# List only directories
alias lsd='ls -l | grep "^d"'

alias hometunnel='ssh -fND localhost:10999 colin@colingalindo.ddns.us'
