# This is Git's per-user configuration file.
[user]
	name = Colin Galindo
	email = cgalindo@homeaway.com

[alias]
  f = fetch --all --prune
  go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
  dm = "!git branch --merged | grep -v '\\*' | grep -v master | grep -v development | grep -v dev | xargs -n 1 git branch -d"
  rb = "rebase"
  co = "checkout"
  temp = "!git add --all && git commit -m \"Temp commit\" -n"
  untemp = reset HEAD^
  cs = commit -S
  rb = rebase -S

[color]
  # Use colors in Git commands that are capable of colored output when
  # outputting to the terminal. (This is the default setting in Git â‰¥ 1.8.4.)
  ui = auto
[core]
  editor = vim
[help]
  autocorrect = 1
[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P
[merge "yarn-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P -c yarn
